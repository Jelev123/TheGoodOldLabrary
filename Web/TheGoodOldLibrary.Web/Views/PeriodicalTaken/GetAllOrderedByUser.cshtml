@using TheGoodOldLibrary.Data.Models.ViewModel.BookTaking

@model List<AllTakings>
    <h2>Periodicals</h2>

@if (Model.Count > 0)
{
    <h5>User: @Model.FirstOrDefault().UserName.Split("@")[0]</h5>

}


<h5>Taking</h5>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Take At</th>
        </tr>
    </thead>
    @foreach (var book in this.Model)
    {
        @if (book.IsTaken == true)
        {
            <tbody>
                <tr>
                    <td>@book.Id</td>
                    <td>@book.PeriodicalName</td>
                    <td>@book.CreatedOn</td>
                    <td>
                        <a class="col-md-4" class="btn btn-danger" asp-controller="PeriodicalTaking" asp-action="Return" asp-route-id="@book.Id">Return</a>


                    </td>
                </tr>
            </tbody>
        }


    }
</table>

<hr />

<h5>Returned</h5>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Returned At</th>
        </tr>
    </thead>

    @foreach (var book in this.Model)
    {

        @if (book.IsTaken == false)
        {
            <tbody>
                <tr>
                    <td>@book.Id</td>
                    <td>@book.PeriodicalName</td>
                    <td>@book.ModifiedOn</td>
                </tr>
            </tbody>
        }


    }
</table>

