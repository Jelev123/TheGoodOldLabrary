@using TheGoodOldLibrary.Data.Models.ViewModel.Book
@model CreateBooksViewModel

@{
    ViewData["Title"] = "Create Book";

    var genreItems = this.Model.GenreItems.Select(x => new SelectListItem(x.Value, x.Key));
    var authorItems = this.Model.AuthorItems.Select(x => new SelectListItem(x.Value, x.Key));


}
<h2 style="color: black">@ViewData["Title"]</h2>

<div class="align-content-center">

    <div class="row col-md-4 offset-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="GenreId"></label>
                <select asp-for="GenreId" class="form-control" asp-items="genreItems"></select>

            </div>
            <div class="form-group">
                <label asp-for="BookCount"></label>
                <input asp-for="BookCount" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control" />
            </div>

            <input class="btn text-black btn-info text-center " type="submit" value="Add" />
        </form>
    </div>
</div>
