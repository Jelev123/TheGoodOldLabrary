@using TheGoodOldLibrary.Data.Models.ViewModel.Book
@model BookViewModel



    <a href="@Model.ImageUrl">
        <img src="@Model.ImageUrl" width="400" alt="@Model.Name">
    </a>
    <h2>@Model.Name</h2>
    <h2>@Model.GenreName</h2>
    <h2>@Model.AuthorFirstName @Model.AuthorLastName</h2>


    <a asp-controller="Books" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>






    @if (Model.BookCount > 0)
    {
        <div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 style="color : green" class="modal-title" id="orderModalLabel">Order - @Model.Name</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="order-form" asp-controller="Books" asp-action="BookTaking" method="post">
                            <div class="form-group">
                            </div>
                            <input type="hidden" value="@Model.Id" name="bookId" />
                            <input type="hidden" value="@Model.BookStatusId" name="bookId" />

                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="complete-order-button">Complete</button>
                    </div>
                </div>
            </div>
        </div>

        <button class="btn btn-primary text-black font-weight-bold" data-toggle="modal" data-target="#orderModal">Purchace</button>

    @if (Model.BookCount == 0)
    {
        <h3 style="color: red">No Book Available</h3>
    }



}

<script>
    $('#complete-order-button').click(function() {
        $('#order-form').submit();
    });
</script>